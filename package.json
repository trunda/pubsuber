{
  "name": "pubsuber",
  "version": "0.1.0",
  "description": "Node.js pub/sub server with sockjs",
  "main": "dist/index.js",
  "scripts": {
    "commit": "git-cz",
    "prestart": "npm run build",
    "start": "node ./dist/index.js",
    "start:watch": "nodemon ./dist/index.js",
    "prebublish": "npm run build",
    "test": "nyc --require ts-node/register ./node_modules/.bin/_mocha --opts mocha.opts",
    "prebuild": "rm -rf dist",
    "build": "tsc -p .",
    "build:watch": "npm run build -- -w",
    "commitmsg": "conventional-changelog-lint -e",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "prepush": "npm test"
  },
  "jshintConfig": {
    "esversion": 6
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trunda/pubsuber.git"
  },
  "keywords": [
    "sockjs",
    "pusher",
    "pub",
    "sub"
  ],
  "author": "Jakub Truneƒçek <jakub.trunecek@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/trunda/pubsuber/issues"
  },
  "homepage": "https://github.com/trunda/pubsuber#readme",
  "devDependencies": {
    "@types/chai": "3.4.34",
    "@types/lodash": "4.14.37",
    "@types/mocha": "2.2.32",
    "@types/request": "0.0.31",
    "@types/sinon": "1.16.31",
    "@types/socket.io": "1.4.27",
    "@types/winston": "0.0.28",
    "chai": "3.5.0",
    "chai-subset": "1.3.0",
    "codecov": "1.0.1",
    "commitizen": "2.8.6",
    "conventional-changelog-lint": "1.0.1",
    "cz-conventional-changelog": "1.2.0",
    "husky": "0.11.9",
    "mocha": "3.1.0",
    "nodemon": "1.10.2",
    "nyc": "8.3.1",
    "sinon": "1.17.6",
    "ts-node": "1.4.1",
    "tslint": "3.15.1",
    "typescript": "2.0.3"
  },
  "dependencies": {
    "request": "2.75.0",
    "lodash": "4.16.3",
    "request-promise-native": "1.0.3",
    "socket.io": "1.4.8",
    "winston": "2.2.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules/",
      "dist/"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
