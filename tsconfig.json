{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "target": "es6",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true
  },
  "include": [
    "typings/index.d.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}